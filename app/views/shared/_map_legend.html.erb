
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content legend-modal">
      <div class="modal-header">
            <% if @user_active_itinerary.exists? %>
              <h2><%= @user_active_itinerary.first.itinerary_name %> Itinerary</h2>
            <% else %>
              <h2 style="display:block;">No Active Itinerary</h2>
              <%= link_to "Choose an itinerary to display", user_itineraries_path(@user), class: 'yellow-button-map-legend-active-itinerary' %>
            <% end %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <ul class="legend-icons inline-list">
              <li><i class="fas fa-map-marker-alt fa-2x user-location-marker"></i> You Are Here</li>
              <li><i class="fas fa-map-marker-alt fa-2x collected-stamp-marker"></i> Collected Stamp</li>
              <li><i class="fas fa-map-marker-alt fa-2x uncollected-stamp-marker"></i> Uncollected Stamp</li>
            </ul>
      </div>
    </div>
  </div>
</div>
