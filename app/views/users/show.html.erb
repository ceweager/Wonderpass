<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="container user-profile-cont">
  <div class="card profile-box">
    <% if @user.photo.attached? %>
      <%= cl_image_tag @user.photo.key , width: 350, height: 250, crop: :fill, class: "card-img-top", alt: "Card image cap" %>
    <% else %>
      <img class="card-img-top" src="app/assets/images/Default.PNG" alt="Card image cap">
    <% end %>
    <div class="card-body">
      <h1 class="card-title"><%= @user.first_name %></h1> 
      <p class="card-text">Number of stamps collected</p>
      <h3><%= @stamp_count %></h3> 
      <p class="card-text">Number of km travelled</p>
      <h3></h3>
      <p>Travellor since</p>
       <h3><%= @user.created_at.strftime("%d %B %Y") %></h3>
      <%= link_to "See stampbook", user_stampbooks_path(@user), class: "yellow-button" %>
    </div>
  </div>
  <div class ="menu-button"><i class="fas fa-bars"></i></div>
</div>