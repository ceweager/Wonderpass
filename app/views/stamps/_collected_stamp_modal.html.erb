<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Show stamp</button>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="stamp-div d-flex  justify-content-start pt-5 m-0">
        <div class="row col-6 p-0 m-0">
          <div class="stamp-background" style = "width: 300px;, height: auto;">
            <%= cl_image_tag(stamp.location.stamp_photos.first.key, width: 100, height:100, crop: :fill)%>
          </div>
          <br>
          <div>
            <h1><%= stamp.location.location_name %></h1>
          </div>
          <p><%= stamp.location.location_description %></p>
        </div>

        <div class="row col-6 p-0 m-0">
        <%= cl_image_tag(stamp.location.location_photos.first.key, class: "location-pic", width: 200, height: 200, crop: :fill)%>
        </div>
      </div>
    </div>
  </div>
</div>
