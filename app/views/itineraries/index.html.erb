<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <% @itineraries.each do |itinerary| %>
        <%= render 'itinerary_card', itinerary: itinerary %>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-6">
      <div id="itinerary-map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
