<%= form_tag itinerary_itinerary_items_path(@itinerary), method: :get do %>
  <div class="form-box tag-item">
    <h2>Choose from categories</h2>
    <% @categories.each do |category| %>
      <%= check_box_tag("categories[]", category , false, class: "tag-selector") %>
      <%= label_tag(category) %>
    <% end %>
  </div>
  <div class="form-box">
    <h2>Choose your distance</h2>
    <%= select_tag(:distance, options_for_select(@distances)) %>
  </div>
  <div class="form-box">
    <%= hidden_field_tag(:add_completed) %>
    <%= label_tag(:add_completed, "Include completed stamps?") %>
    <%= check_box_tag(:add_completed) %>
  </div>
  <%= submit_tag "next", class: "btn small-yellow-button" %>
<% end %>